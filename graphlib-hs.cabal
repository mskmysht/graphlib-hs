library
  exposed-modules:
      GT.Algebra.Matrix
      GT.Algorithm.ShortestPath
      GT.Generator.RandomGraph
      GT.Graph
      GT.Graph.Class
      GT.Graph.Internal
      GT.Parse
  -- other-modules:
